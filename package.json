{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "scripts": {
    "build:sass": "sass assets/css/input.scss assets/css/compiled.css",
    "watch:sass": "sass --watch assets/css/input.scss assets/css/compiled.css",
    "build:tailwind": "npx @tailwindcss/cli -i ./assets/css/entry.css -o ./assets/src/output.css",
    "watch:tailwind": "npx @tailwindcss/cli -i ./assets/css/entry.css -o ./assets/src/output.css --watch",
    "dev": "npm run build:sass && concurrently \"npm run watch:sass\" \"npm run watch:tailwind\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "sass": "^1.97.3"
  }
}